{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": [".next/**", "!.next/cache/**", "storybook-static/**", "dist/**"]
    },
    "build:storybook": {
      "env": ["CHROMATIC_TOKEN"]
    },
    "lint": {},
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },

    "prettier": {},
    "prettier:fix": {},
    "stylelint": {},
    "stylelint:fix": {},
    "release:sentry": {}
  },
  "globalDependencies": [".env"]
}
